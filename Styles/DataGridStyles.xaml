<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
        <Setter Property="Background" Value="{StaticResource color7}" />
        <Setter Property="Foreground" Value="{StaticResource plainTextColorDark}" />
        <Setter Property="FontFamily" Value="Montserrat" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="BorderBrush" Value="{StaticResource plainTextColorDark}" />
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource plainTextColorDark}" />
        <Setter Property="Foreground" Value="{StaticResource color7}" />
        <Setter Property="Padding" Value="10,0,0,10" />
        <Setter Property="FontFamily" Value="Montserrat" />
        <Setter Property="FontSize" Value="15" />
    </Style>
</ResourceDictionary>